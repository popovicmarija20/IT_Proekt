<div class="row">
    <div class="col-lg-12">

        @foreach (var item in Model)
        {

        <div style="border:2px solid darkred; margin-top:10px; margin-left:5px; width:45vh" class="col-md-4 text-center" id="pizzaItem">
            <header>
                <img src="@item.Image" style="max-width:30vh; min-width:30vh; max-height:100px; margin-top:2px;" class="img-thumbnail" />
            </header>
            <div>
                <span style="font-style:oblique">Name:</span>  @Html.DisplayFor(modelItem => item.Name)

            </div>
            <div>
                <span style="font-style:oblique">Ingredients:</span>  @Html.DisplayFor(modelItem => item.Ingredients)

            </div>
            <div>
                <span style="font-style:oblique">Price:</span> @Html.DisplayFor(modelItem => item.Price)

            </div>
            <footer style="margin-bottom:5px;">
                @if (User.IsInRole("Admin"))
                {
                    <a href="@Url.Action("Edit", "Pizzas" , new { id=item.Id})" class="btn btn-default btn-sm">Edit</a>
                    <a href="@Url.Action("Details", "Pizzas" , new { id=item.Id})" class="btn btn-default btn-sm">Details</a>
                    <a href="@Url.Action("Delete", "Pizzas" , new { id=item.Id})" class="btn btn-default btn-sm">Delete</a>
                    <a href="@Url.Action("AddToCart", "Pizzas" , new { id=item.Id})" class="btn btn-default btn-sm">Add to Cart</a>
                }
                else if (User.IsInRole("User"))
                {
                    <a href="@Url.Action("Details", "Pizzas" , new { id=item.Id})" class="btn btn-default btn-sm">Details</a>
                    <a href="@Url.Action("AddToCart", "Pizzas" , new { id=item.Id})" class="btn btn-default btn-sm">Add to Cart</a>

                }
            </footer>
        </div>


        }
    </div>
</div>


